pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t skander1919/dp-alpine:latest .'
      }
    }
    stage('Push image') { 
      steps { 
        script {
         sh """
          docker tag skander1919/dp-alpine registry.hub.docker.com/skander1919/dp-alpine:latest
          docker push registry.hub.docker.com/skander1919/dp-alpine:latest
          """
         }
      }
    }
  }
}
