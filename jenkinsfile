pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t skander1919/dp-alpine:latest .'
      }
    }
    stage('Push image') { 
      steps { 
        script {
        withCredentials([usernamePassword(credentialsId: 'dock-cred', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
         sh """
          docker login -u "$USERNAME" -p "$PASSWORD" -H "registry.hib.docker.com"
          docker tag skander1919/dp-alpine registry.hub.docker.com/skander1919/test123:1.0.1
          docker push registry.hub.docker.com/skander1919/test123:1.0.1
          """
         }
         }
      }
    }
  }
}
