pipeline {
  agent { label 'linux' }
  environment {
    DOCKERHUB_CREDENTIALS = credentials('skander-dockerhub')
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t skander1919/dp-alpine:latest .'
      }
    }
   stage('Login') {
     steps {
       sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
     }
   }
   stage('Push') {
     steps {
       sh 'docker push skander1919/dp-alpine:latest'
     }
   }
}
